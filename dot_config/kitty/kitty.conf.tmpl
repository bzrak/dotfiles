include keybinds.conf

# Fonts
font_family      family="Maple Mono NF"
bold_font        auto
italic_font      auto
bold_italic_font auto
{{- if eq .chezmoi.os "darwin" }}
font_size        18
{{- else }}
font_size        15
{{- end }}


# Scrollback
scrollback_lines 2000
scrollback_pager_history_size 4000


# Bell
enable_audio_bell no


# Background
background_opacity 1


# Tabs
# tab_bar_style powerline
# tab_bar_min_tabs 2
# tab_bar_background none
# tab_title_template "{fmt.fg.white}{fmt.bg.black}({index}) {title}"
# active_tab_title_template "{fmt.bg.white}({index}) {title}"
# active_tab_font_style bold
tab_bar_min_tabs            2
tab_bar_edge                bottom
tab_bar_style               powerline
tab_powerline_style         slanted
tab_title_template          ({index}) {title}{' :{}:'.format(num_windows) if num_windows > 1 else ''}
inactive_tab_background   #000000
inactive_tab_foreground   #ffffff
active_tab_background   #434240
active_tab_foreground   #ffffff

{{if eq .chezmoi.os "darwin" }}
# MacOS Specific
shell /opt/homebrew/bin/fish --login --interactive
{{- end }}

# BEGIN_KITTY_THEME
# Neofusion
include current-theme.conf
# END_KITTY_THEME
